lockType MyLock {
  type Int
  invariant(l, v) = [l.f |-> v]
  secInvariant(v) = low(v)
  actions = [(add,Int,Int,duplicable),(mult,Int,Int,duplicable)]

  action mult(v, arg)
    requires low(arg)
    ensures true
  {(v * arg), arg}

  action add(v, arg)  
    requires arg > 0 && low(arg)
    ensures low(result)
  {(v + arg), arg}

  proof commutativity[add,mult](v,arg1,arg2) {
    inhale false
  }

  proof preservation[add](v, arg) {
    //inhale low(arg)
  }
}

field q : Seq[Int]
lockType Stack {
  type Seq[Int]
  invariant(l, v) = [l.q |-> v]
  secInvariant(v) = true
  actions = [(push,Int,Int,duplicable), (pop,Int,Int,duplicable)]
  
  action push(v, arg)
    requires true
    ensures true
  {(Seq(arg) ++ v), arg}

  action pop(v, arg)
    requires |v| > 0
    ensures true
  {(v[1..]), (v[0])}

  proof reordering[push,pop](v, arg1, arg2) {
    assume true // |v| > 0
  }
}

